  <body style="font-family: 'Prompt', sans-serif; font-size: 14px;">
    <div class="container-scroller">
      <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth">
          <div class="row flex-grow">
            <div class="col-lg-4 mx-auto">
              <div class="auth-form-light text-left p-5">
                <div class="brand-logo">
                  <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
                    <i class="mdi mdi-border-color"></i>
                    <h1 style="font-family: 'Prompt', sans-serif; font-size: 18px;">แก้ไขข้อมูลสินค้า</h1>
                  </div>
                </div>
                <form action="/updateProduct" method="POST" class="pt-3">
                  <div class="form-group">
                    <label for="productImage">รูปสินค้า</label>
                    <img src="/images/products/<%= product.image %>"class="img-fluid">
                  </div>
                  <div class="form-group">
                    <label for="productId">Product ID</label>
                    <input type="text" class="form-control form-control-lg" id="productId" name="productId" value="<%= product._id %>" 
                    style="font-family: 'Prompt', sans-serif; font-size: 14px;" readonly>
                  </div>
                  <div class="form-group">
                    <label for="productName">ชื่อสินค้า</label>
                    <input type="text" class="form-control form-control-lg" id="productName" name="productName" value="<%= product.productname %>"
                    style="font-family: 'Prompt', sans-serif; font-size: 14px;">
                  </div>
                  <div class="form-group">
                    <label for="productType">ประเภทสินค้า</label>
                    <select class="form-control form-control-lg" id="productType" name="productType"
                    style="font-family: 'Prompt', sans-serif; font-size: 14px;">
                      <% productTypes.forEach(type => { %>
                        <option value="<%= type %>"><%= type %></option>
                      <% }); %>
                    </select>
                  </div>
                  <div class="form-group">
                    <label for="productPrice">ราคา</label>
                    <input type="text" class="form-control form-control-lg" id="productPrice" name="productPrice" value="<%= product.price %>"
                    style="font-family: 'Prompt', sans-serif; font-size: 14px;" >
                  </div>
                  <div class="mt-3">
                    <button type="submit" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn">Update</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    
      <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
    </div>
