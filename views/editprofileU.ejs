                      <h1 style="font-family: 'Prompt', sans-serif; font-size: 18px;">แก้ไขโปรไฟล์ส่วนตัว</h1> 
                    </div>                               
                    <form class="forms-sample">
                      <div class="d-flex justify-content-center">
                        <label for="uploadAvatar" style="cursor: pointer; position: relative;">
                            <img src="/images/users/<%=UserData.image %>" alt="Avatar" class="rounded-circle avatar-img" id="avatarImage" style="width: 150px; height: 150px;">
                            <input type="file" id="uploadAvatar" style="display: none;" accept="image/*" onchange="handleFileSelect(event)">
                            <div class="overlay" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); text-align: center; color: white;">
                                <p style="margin: 0;">แก้ไข</p>
                            </div>
                        </label>
                    </div>
                    
                    <style>
                        .overlay {
                            display: none;
                        }
                    
                        label:hover .overlay {
                            display: block;
                        }
                    </style>
                    
                    <script>
                        function handleFileSelect(event) {
                            const input = event.target;
                            if (input.files && input.files[0]) {
                                const reader = new FileReader();
                    
                                reader.onload = function (e) {
                                    const avatarImage = document.getElementById('avatarImage');
                                    avatarImage.src = e.target.result;
                                };
                    
                                reader.readAsDataURL(input.files[0]);
                            }
                        }
                    </script>                     
                  <br>
                      <div class="form-group">
                        <label for="exampleInputName1">Username (ไม่สามารถแก้ไขได้)</label>
                        <input type="text" class="form-control" id="exampleInputName1" value="<%=UserData.username%> ตำแหน่ง:<%=UserData.role%>" placeholder="Name" readonly>
                    </div>                    
                      <div class="form-group">
                        <label for="exampleInputName1">ชื่อจริง</label>
                        <input type="text" class="form-control" id="exampleInputName1" value="<%=UserData.firstname%>" placeholder="Name">
                      </div>
                      <div class="form-group">
